<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="@drawable/loginscreen">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/bgimg"
            android:src="@drawable/loginscreen"
            android:scaleType="fitXY"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="false"
            android:layout_alignWithParentIfMissing="false"
            android:backgroundTint="#00ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UserName"
            android:id="@+id/usrName"
            android:inputType="text"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="30dp"
            android:background="#00ffffff"
            android:layout_above="@+id/editText1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText1"
            style="@android:style/Widget.DeviceDefault.EditText"
            android:clickable="true"
            android:contextClickable="true"
            android:editable="true"
            android:inputType="text"
            android:minHeight="50dp"
            android:background="#79ffffff"
            android:layout_above="@+id/usrPwd"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:id="@+id/usrPwd"
            android:inputType="text"
            android:textColor="#ffffff"
            android:textSize="30dp"
            android:textStyle="bold"
            android:background="#00ffffff"
            android:layout_above="@+id/editText2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editText2"
            style="@style/Widget.AppCompat.EditText"
            android:clickable="true"
            android:contextClickable="true"
            android:editable="true"
            android:maxHeight="50dp"
            android:minHeight="50dp"
            android:background="#7bffffff"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FoodEX"
            android:id="@+id/foodEx"
            android:textColor="#ffffff"
            android:textSize="50dp"
            android:textStyle="bold"
            android:textColorHighlight="@color/abc_search_url_text_selected"
            android:textAlignment="center"
            android:paddingStart="100dp" />

        <Button
            android:layout_width="@android:dimen/thumbnail_width"
            android:layout_height="wrap_content"
            android:text="Login"
            android:id="@+id/loginBtn"
            style="@style/AppTheme"
            android:layout_marginTop="52dp"
            android:textSize="20dp"
            android:layout_below="@+id/editText2"
            android:layout_toLeftOf="@+id/signupBtn"
            android:layout_toStartOf="@+id/signupBtn" />

        <Button
            android:layout_width="@android:dimen/thumbnail_width"
            android:layout_height="wrap_content"
            android:text="SignUp"
            android:id="@+id/signupBtn"
            style="@style/AppTheme"
            android:textSize="20dp"
            android:layout_alignTop="@+id/loginBtn"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password ?"
            android:id="@+id/frgtPwd"
            android:textColor="@android:color/background_dark"
            android:textIsSelectable="false"
            android:textSize="20dp"
            android:layout_below="@+id/loginBtn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="42dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Terms &amp; Conditions"
            android:id="@+id/TC"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textSize="15dp"
            android:textColor="@color/abc_background_cache_hint_selector_material_dark" />

    </RelativeLayout>

</LinearLayout>
