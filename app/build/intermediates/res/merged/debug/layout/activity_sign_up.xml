<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.kalpeshwaran.foodexlogin.SignUP">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="500dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:text="SignUP Page"
        android:id="@+id/signUp"
        android:textColor="#010101"
        android:textSize="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Name"
        android:id="@+id/FName"
        android:inputType="text"
        android:textColor="#010101"
        android:textStyle="bold"
        android:textSize="25dp"
        android:background="#00ffffff"
        android:layout_below="@+id/signUp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="10dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Fnametab"
        style="@android:style/TextAppearance.Material.Widget.EditText"
        android:clickable="true"
        android:contextClickable="true"
        android:editable="true"
        android:inputType="text"
        android:minHeight="40dp"
        android:layout_below="@+id/FName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#69a1a1a1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Name"
        android:id="@+id/LName"
        android:inputType="text"
        android:textColor="#010101"
        android:textStyle="bold"
        android:textSize="25dp"
        android:background="#00ffffff"
        android:layout_below="@+id/Fnametab"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Lnametab"
        style="@android:style/Widget.DeviceDefault.EditText"
        android:clickable="true"
        android:contextClickable="true"
        android:editable="true"
        android:inputType="text"
        android:minHeight="40dp"
        android:background="#69a1a1a1"
        android:layout_below="@+id/LName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email Address"
        android:id="@+id/Email"
        android:inputType="text"
        android:textColor="#010101"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_below="@+id/Lnametab"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/Emailtab"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:minHeight="40dp"
        android:background="#69a1a1a1"
        android:layout_below="@+id/Email"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mobile Number"
        android:id="@+id/mobileNum"
        android:inputType="text"
        android:textColor="#010101"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_below="@+id/Emailtab"
        android:layout_alignRight="@+id/Email"
        android:layout_alignEnd="@+id/Email" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/mobNumtab"
        android:layout_below="@+id/mobileNum"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#69a1a1a1"
        android:minHeight="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:id="@+id/pwd"
        android:inputType="text"
        android:textColor="#010101"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_below="@+id/mobNumtab"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/pwdtab"
        android:background="#69a1a1a1"
        android:minHeight="40dp"
        android:layout_above="@+id/confirmpwd"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Password"
        android:id="@+id/confirmpwd"
        android:inputType="text"
        android:textColor="#010101"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_above="@+id/confirmpwdtab"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/confirmpwdtab"
        android:background="#69a1a1a1"
        android:minHeight="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

            <Button
                android:layout_width="@android:dimen/thumbnail_width"
                android:layout_height="wrap_content"
                android:text="Create"
                android:id="@+id/accntCreate"
                android:layout_marginTop="100dp"
                android:layout_marginLeft="85dp"
                android:layout_below="@+id/confirmpwdtab"
                android:layout_centerHorizontal="true" />

        </LinearLayout>

        </ScrollView>

    </RelativeLayout>

</LinearLayout>
